keywords = {18 1$\omega$9,18 2$\omega$6,9,beech roots,ectomycorrhizal fungi,fungal biomarkers,girdling,plfas,soil microbial community},
number = {9},
pages = {1650--1652},
publisher = {Pergamon Press},
title = {{Negligible contribution from roots to soil-borne phospholipid fatty acid fungal biomarkers 18:2$\omega$6,9 and 18:1$\omega$9}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S003807171000180X},
volume = {42},
