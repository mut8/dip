file = {:home/lluc/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Wanek et al. - 2010 - Determination of gross rates of amino acid production and immobilization in decomposing leaf litter by a novel N-15 isotope pool dilution technique.pdf:pdf},
issn = {00380717},
journal = {Soil Biology and Biochemistry},
number = {8},
pages = {1293--1302},
publisher = {PERGAMON-ELSEVIER SCIENCE LTD},
title = {{Determination of gross rates of amino acid production and immobilization in decomposing leaf litter by a novel N-15 isotope pool dilution technique}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0038071710001331},
