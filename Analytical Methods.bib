journal = {Journal of mass spectrometry : JMS},
keywords = {Adipose Tissue,Adipose Tissue: chemistry,Breast,Breast: chemistry,Environmental Pollutants,Environmental Pollutants: analysis,Female,Gas Chromatography-Mass Spectrometry,Gas Chromatography-Mass Spectrometry: methods,Halogenated Diphenyl Ethers,Halogenated Diphenyl Ethers: analysis,Hexanes,Hexanes: chemistry,Humans,Pesticides,Pesticides: analysis,Polychlorinated Biphenyls,Polychlorinated Biphenyls: analysis,Polycyclic Hydrocarbons, Aromatic,Polycyclic Hydrocarbons, Aromatic: analysis,Reference Standards},
